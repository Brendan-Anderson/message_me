<h4 class="ui center aligned large icon header">
  Welcome to MessageMe-a complete Chat App
</h4>
<h5 class="ui center aligned medium icon header">
  <i class="circular red comments icon"></i>
  Create an account
</h5>

<div class="ui placeholder segment">
  <div class="ui one column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Enter username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Enter password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :email, "Enter an email" %>
          <div class="ui left icon input">
            <%= f.text_field :email, placeholder: "Email" %>
            <i class="user icon"></i>
          </div>
        </div>
        <%= f.submit "Create account", class: "ui orange submit button" %>
      <% end %>
    </div>
  </div>
</div>